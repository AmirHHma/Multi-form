  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "module": "CommonJS", // or "CommonJS" depending on your environment
    "jsx": "react", // or "preserve"
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": false,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}